{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": false,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@src/*": ["./src/*"],
      "@app/*": ["./src/app/*"],
      "@commons/*": ["./src/commons/*"],
      "@assets/*": ["./src/commons/assets/*"],
      "@router": ["./src/commons/router"],
      "@router/*": ["./src/commons/router/*"],
      "@hooks": ["./src/commons/hooks"],
      "@utils": ["./src/commons/utils"],
      "@shadcn/": ["./src/commons/components/shadcn"],
      "@shadcn/utils": [
        "./@utils.ts"
      ],
      "@utils/*": ["./src/commons/utils/*"],
      "@interfaces": ["./src/commons/interfaces"],
      "@interfaces/*": ["./src/commons/interfaces/*"],
      "@store": ["./src/commons/store"],
      "@store/*": [
        "./src/commons/store/*"
      ],
      "@components/*": [
        "./src/commons/components/*"
      ],
      "@images/*": [
        "./src/commons/assets/images/*"
      ]
    }

  },
  "include": ["src",".monicon/*.d.ts"],
  "references": []
}

